<a name="top"></a>
<h2>New...</h2>


<div class="block1">
  <p>RottenTomatoes.com a vast trove of data.  Broad searches can reveal hundreds of results.  This has been restricted to the top 20.</p>
</div>


<div class="block2">
  <form action="/new_film_rt">
    <select name="search_by">
      <option value="title">Title</option>
    </select>
    <input type="text" name="search">
    <input type="submit" value="Search">
  </form>
</div>

<% if @results.count != 0 %>
  <% @results.each do |object| %>
    <form action="/new/*">
      <div class="display_results">
        <% object.instance_variables.each do |attribute| %>
          <% snip = attribute.to_s.delete("@") %>
          <% if snip != "id" && snip != "trailer" %>
            <p><%= "#{snip.humanize}" %>: <%= object.send(snip) %></p>
            <input type="hidden" name="<%= snip %>" value="<%= object.send(snip) %>">
          <% end %>
        <% end %>
        <div class="movie_thumb">
          <img src="<%= @thumbs[@results.find_index(object)] %>" alt="poster thumbnail" height="200" width="135">
        </div>
        <input type="submit" value="This one!">
      </div>
    </form>
  <% end %>
  <a href="#top">Back to top</a>
<% end %>