<h2>Search...</h2>

<div class="block1">
  <div class="search_form">
    <form action="/results">
      <input type="hidden" name="table" value="<%= @table %>">
      <select name="field">
        <% @fields.each do |x| %>
        <option value="<%= x %>"><%= x %></option>
        <% end %>
      </select>
      <input type="text" name="value">
      <p><input type="checkbox" name="all" value="yes">Just show me all of 'em.</p>
      <input type="submit">
    </form>
  </div>
</div>
