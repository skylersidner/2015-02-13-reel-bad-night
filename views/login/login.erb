<h2>Login</h2>

<div class="display">
  <% if @logout == true %>
    <h2>Logged Out!</h2>
  <% end %>
  <form action="/validate" method="post">
    <p>Username: <input type="text" name="username"></p>
    <p>Password: <input type="password" name="password"></p>
    <input type="submit" value="Submit">
  </form>
</div>
