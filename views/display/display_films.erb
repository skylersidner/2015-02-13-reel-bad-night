<h2>Films</h2>

<div class="block1">
  <p><a href="/films/search">Search for a specific film</a></p>
  <p><a href="/films/new">Make a new film</a></p>
</div>

<% if @results.count > 0 %>
  <% @results.each do |object| %>
    <div class="display">
      <form action="/films/<%= object.id %>/show">
        <p>ID: <%= object.id %></p>
        <p>Title: <%= object.title %></p>
        <p>Year: <%= object.year %></p>
        <p>Length: <%= object.length %></p>
        <p>Plot Synopsis: <%= object.synopsis %></p>
        <p>Trailer: <%= object.trailer %></p>
        <p>Rotten/Fresh Rating: <%= object.rt_rating %></p>
        <input type="hidden" value="<%= object.id %>">
        <input type="submit" value="See this one">
      </form>
    </div>
  <% end %>
<% else %>
  <div class="block1">
    <p>No results matched your search!<p>
  </div>
<% end %>